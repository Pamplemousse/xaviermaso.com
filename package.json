{
  "name": "xaviermaso.com",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "build": "npm run build:fonts && npm run build:css && npm run build:js && npm run minify",
    "build:js": "browserify public/javascripts/main.js > public/javascripts/bundle.js",
    "build:css": "stylus public/stylesheets/main.css --include-css -o public/stylesheets/bundle.css",
    "build:fonts": "cp -R node_modules/font-awesome/fonts public/",
    "minify": "npm run minify:js && npm run minify:css",
    "minify:js": "uglifyjs -cm -o public/javascripts/bundle.min.js -- public/javascripts/bundle.js",
    "minify:css": "cleancss -o public/stylesheets/bundle.min.css public/stylesheets/bundle.css",
    "watch": "npm run watch:css & npm run watch:js & npm run start",
    "watch:js": "watchify public/javascripts/main.js -o public/javascripts/bundle.js -v",
    "watch:css": "stylus -w public/stylesheets/main.css --include-css -o public/stylesheets/bundle.css"
  },
  "dependencies": {
    "body-parser": "~1.12.2",
    "cookie-parser": "~1.3.4",
    "express": "^4.14.0",
    "fs-readfile-promise": "^3.0.0",
    "morgan": "~1.5.2",
    "pug": "^2.0.0-alpha5",
    "serve-favicon": "~2.2.0"
  },
  "devDependencies": {
    "bootstrap": "^3.3.5",
    "browserify": "^12.0.1",
    "clean-css": "^3.4.12",
    "font-awesome": "^4.4.0",
    "jquery": "^2.1.4",
    "stylus": "^0.52.4",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  }
}
