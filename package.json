{
  "name": "xaviermaso.com",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "build": "npm run build:fonts && npm run build:css && npm run build:js && npm run minify",
    "build:js": "browserify public/javascripts/main.js > public/javascripts/bundle.js",
    "build:css": "stylus public/stylesheets/main.css --include-css -o public/stylesheets/bundle.css",
    "build:fonts": "cp -R node_modules/font-awesome/fonts public/",
    "minify": "npm run minify:js && npm run minify:css",
    "minify:js": "uglifyjs -cm -o public/javascripts/bundle.min.js -- public/javascripts/bundle.js",
    "minify:css": "cleancss -o public/stylesheets/bundle.min.css public/stylesheets/bundle.css",
    "watch": "npm run watch:css & npm run watch:js & npm run start",
    "watch:js": "watchify public/javascripts/main.js -o public/javascripts/bundle.js -v",
    "watch:css": "stylus -w public/stylesheets/main.css --include-css -o public/stylesheets/bundle.css"
  },
  "dependencies": {
    "body-parser": "~1.12.2",
    "cookie-parser": "~1.3.4",
    "express": "^4.14.0",
    "fs-readfile-promise": "^3.0.0",
    "morgan": "~1.5.2",
    "pug": "^2.0.0-alpha5",
    "serve-favicon": "~2.2.0",
    "font-awesome": "^4.7.0"
  },
  "devDependencies": {
    "bootstrap": "^3.3.5",
    "browserify": "^12.0.1",
    "clean-css": "^3.4.12",
    "font-awesome": "^4.4.0",
    "jquery": "^2.1.4",
    "stylus": "^0.52.4",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0",
    "autoprefixer": "^6.3.6",
    "bootstrap-sass": "^3.3.6",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.23.1",
    "elm": "^0.18.0",
    "elm-hot-loader": "^0.3.2",
    "elm-webpack-loader": "^3.0.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.17.0",
    "html-webpack-pug-plugin": "0.0.3",
    "jquery": "^3.1.0",
    "node-sass": "^3.7.0",
    "postcss-loader": "^0.10.1",
    "pug": "^2.0.0-beta6",
    "pug-loader": "^2.3.0",
    "rimraf": "^2.5.2",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.14.1"
  }
}
