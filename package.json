{
  "name": "xaviermaso.com",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build": "npm run copy-fonts && npm run build-css && npm run build-js",
    "build-js": "browserify public/javascripts/main.js > public/javascripts/bundle.js",
    "build-css": "stylus public/stylesheets/main.css --include-css -o public/stylesheets/bundle.css",
    "copy-fonts": "cp -R node_modules/font-awesome/fonts public/",
    "watch-js": "watchify public/javascripts/main.js -o public/javascripts/bundle.js -v",
    "watch-css": "stylus -w public/stylesheets/main.css --include-css -o public/stylesheets/bundle.css"
  },
  "dependencies": {
    "body-parser": "~1.12.2",
    "bootstrap": "^3.3.5",
    "browserify": "^12.0.1",
    "cookie-parser": "~1.3.4",
    "express": "~4.12.3",
    "font-awesome": "^4.4.0",
    "fs-readfile-promise": "^1.1.0",
    "jade": "~1.9.2",
    "jquery": "^2.1.4",
    "morgan": "~1.5.2",
    "serve-favicon": "~2.2.0",
    "stylus": "^0.52.4"
  },
  "devDependencies": {
    "gulp": "~3.8.11",
    "gulp-live-server": "0.0.14",
    "gulp-nsp": "^0.4.5",
    "gulp-shrinkwrap": "^2.0.1",
    "nsp": "^1.0.3",
    "watchify": "^3.7.0"
  }
}
